/* 25_tailrecursive.wb

   Recursive Fibonacci numbers */

func factorial(n int) int {
	return factorialTail(n, 1)
}

func factorialTail(n int, acc int) int {
	if n <= 1 {
		return acc
	}
	return factorialTail(n-1, n*acc)
}

const LAST = 10; // change 30 to 10

func run() int {
    var n = 0;
    while n < LAST {
        print factorial(n);
        n = n + 1;
    }
    return 0;
}

run();




